<div class="cream-wrapper">
  <div class="card-container">
    <div class="row">
      <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">

        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path cocktail.try(:photo), height: 300, width: 400, crop: :fill %>')">
          <div class="card-content">
          <%= cocktail.name %> <br>
          <%= link_to "See more", cocktail_path(cocktail), class: 'btn btn-primary btn-sm' %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

